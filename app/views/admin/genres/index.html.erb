<div class="container my-5 ">

  <div class="row m-5">
    <h4 style="background-color:#dcdcdc;">ジャンル一覧・追加</h4>
  </div>

 <div class="mt-5 light-text">
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <label class="text mx-5">ジャンル名</label>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success btn-sm mx-5" %>
      <% end %>
    </div>
 </div>

 <div class="row m-5">
    <table class="table col-md-4 border">
      <thead class="table-active text">
        <th>ジャンル</th>
        <th></th>
      </thead>
       <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
 </div>


</div>

