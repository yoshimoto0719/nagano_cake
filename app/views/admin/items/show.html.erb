<div class="container my-5">
  <div class="row">
    <h2 style="background-color:#dcdcdc;">商品詳細</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-3">
      <%= image_tag @item.get_item_image(100,100) %>
    </div>

    <div class="col-sm-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.description %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%= @item.price %>(<%= (@item.price * 1.1).floor %>)円
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active %>
               販売中
              <% else %>
               販売停止中
              <% end %>
            </td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-5 col-sm-2 mt-3">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>
