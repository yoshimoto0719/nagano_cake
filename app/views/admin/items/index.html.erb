<div class="container my-5">
  <div class="row">
    <h2 style="background-color:#dcdcdc;">商品一覧</h2>
  </div>

    <div class="col-md-1 offset-md-9">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-3x"></i>
      <% end %>
    </div>
  </div>

    <div class="row　ml-5">
      <table class="table cart_products">
        <tr>
          <th class="col-md-1">商品ID</th>
          <th class="col-md-3">商品名</th>
          <th class="col-md-2">税抜価格</th>
          <th class="col-md-2">ジャンル</th>
          <th class="col-md-2">ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td class="col-md-1"><%= item.id %></td>
          <td class="col-md-3"><%= link_to item.name, admin_item_path(item.id) %></td>
          <td class="col-md-2"><%= item.price %></td>
          <td class="col-md-2"><%= item.genre.name %></td>
          <td class="col-md-2"><%= item.is_active ? "販売中" : "販売停止中" %></td>
        </tr>
        <% end %>
      </table>
    </div>
</div>