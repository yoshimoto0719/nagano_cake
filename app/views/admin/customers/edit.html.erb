<div class="container">

  <div class="row mb-5">

    <div class="offset-1">
      <h2 class="my-4 text title-sub-text">
        <%= @customer.last_name + @customer.first_name %>s Details Edith...
      </h2>
    </div>

    <div class="col-12">
      <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>

        <div class="form-group row text">
          <%= f.label :id, "会員ID", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col=8 light-text">
            <%= f.label :id, @customer.id, class: "ml-4" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :first_name, "氏名", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-4 light-text">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="col-4 light-text">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :first_name, "フリガナ", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-4 light-text">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-4 light-text">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :zip_code, "郵便番号", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-4 light-text">
            <%= f.text_field :zip_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :address, "住所", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-4 light-text">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :phone_number, "電話番号", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-4 light-text">
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :email, "メールアドレス", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-4 light-text">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :is_deleted, "会員ステータス", class: "col-form-label col-3 font-weight-bold" %>
          <div class="col-8 light-text">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, false, class: "form-check-input" %>
              <%= f.label :is_deleted, "有効", value: false, class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, true, class: "form-check-input" %>
              <%= f.label :is_deleted, "退会", value: true, class: "form-check-label" %>
            </div>
          </div>
        </div>

        <div class="form-group row mt-2">
          <div class="col-3"></div>
          <div class="col-4 text">
            <%= f.submit "Save", class: "btn btn-success w-50" %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>