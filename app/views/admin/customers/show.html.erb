<div class="container">

  <div class="row mb-5">
    <div class="offset-1">
      <h2 class="my-4 text title-sub-text background-color:#dcdcdc;">
        <%= @customer.last_name + @customer.first_name %>さんの会員詳細
      </h2>
    </div>
    <div class="col-12">
      <table class="table table-borderless">
        <tr>
          <th class="w-25 text">会員ID</th>
          <td class="light-text"><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="text">氏名</th>
          <td class="light-text"><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="text">フリガナ</th>
          <td class="light-text"><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="text">郵便番号</th>
          <td class="light-text"><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th class="text">住所</th>
          <td class="light-text"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="text">電話番号</th>
          <td class="light-text"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class="text">メールアドレス</th>
          <td class="light-text"><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="text">会員ステータス</th>
          <td class="text">
            <% if @customer.is_deleted %>
              <span>退会</span>
            <% else %>
              <span class="text-success">有効</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td class="text">
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-4 col-2" %>
            <%= link_to "注文履歴一覧を見る", orders_path(@customer), class: "btn btn-primary ml-5" %>
          </td>
        </tr>
      </table>

    </div>

  </div>

</div>