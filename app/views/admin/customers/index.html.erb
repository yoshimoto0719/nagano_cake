<div class="container my-5 ">

  <div class="row m-5">
    <h4>会員一覧</h4>
  </div>

  <div class="row">

        <div class="col-12 mx-auto">

          <table class="table table-hover">

            <thead>
              <tr class="table-active text">
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>

            <tbody>
              <% @customers.each do |customer| %>
                <tr class="light-text">
                  <td><%= customer.id %></th>
                  <td class="text">
                    <%= link_to admin_customer_path(customer), class: "text-dark" do %>
                      <%= customer.last_name + customer.first_name %>
                    <% end %>
                  </td>
                  <td>
                    <%= customer.email %>
                  </td>
                  <td>
                    <% if customer.is_deleted %>
                      <span>退会</span>
                    <% else %>
                      <span class="text-success text">有効</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>

          </table>

        </div>

      </div>

</div>