<div class="container my-5 ">

  <div class="row m-5">
    <h4>注文履歴一覧</h4>
  </div>

  <div class="row mt-5">
    <table class="table table-hover">

      <thead>
        <tr class="table-active text">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= link_to orders_path(order), class:"text-dark"  do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <% end %>
          </th>
          <th><%= order.name %></th>
          <th><%= order.order_details.count %></th>
          <th><%= order.status %></th>
    	 </tr>
    	 <% end %>
      </tbody>

    </table>
  </div>
</div>