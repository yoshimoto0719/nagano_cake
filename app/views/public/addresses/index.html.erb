<div class="container">
  <div class="row">
    <div class="col m-3">
      <h3 style="background-color:#dcdcdc;">配送先登録  / 一覧</h3>
      <div class="mt-5">

        <%= form_with model: @address, url: addresses_path, local:true do |f| %>
          <table class="table table-borderless" style="opacity: 0.8;">
            <tr>
              <td>郵便番号（ハイフンなし）</td>
              <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, :size => "50" %></td>
            </tr>
            <tr>
              <td>宛名</td>
              <td><%= f.text_field :name %></td>
              <td class="text-right"><%= f.submit "新規登録", class:"btn btn-success" %></td>
            </tr>
          </table>
        <% end %>
      </div>

        <table class="table table-hover table-bordered w-70 mt-3" style="opacity: 0.8;">
          <thead>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </thead>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postcode %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか?", class:"btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </table>

    </div>
  </div>
</div>
