<div class="container-fluid">
  <div class="row">
    <div class="col-2 p-2">
      <%= render "public/items/genre", genres: @genres %>
    </div>

    <div class="col-md-3 mt-5">
      <%= image_tag @item.get_item_image(300,300) %>
    </div>

    <div class="col-lg-7 mt-5">
      <h4 class="text item-text font-weight-bold"><%= @item.name %></h4>
      <p class="mt-3 text"><%= @item.description %></p>
      <p class="mt-5 text">¥ <%= (@item.price.to_i * 1.1).floor.to_s(:delimited) %>（税込）</p>
    </div>

      <div class="col-2 offset-1"></div>
      <div class="col-3" style="font-size: 22px; color: red;"><%= flash[:notice] %></div>
      <div class="col-1" style="text-align: center; padding: 2px 0 200px 40px;">
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select:amount, [["1個", 1],["2個", 2],["3個", 3],["4個", 4],["5個", 5],["6個", 6],["7個", 7],["8個", 8],["9個", 9],["10個", 10]], {include_blank: "個数選択"} %>
      <div class="col-3 mt-3", style="text-align: center; padding: 0 0 200px 0;" >
      <%= f.submit "カートに入れる", class: "btn btn-success" %>
      </div>
        <% end %>
      </div>

  </div>
</div>